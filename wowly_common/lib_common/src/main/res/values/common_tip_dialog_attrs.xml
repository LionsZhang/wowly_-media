<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="lib_common_dialog_attrs">
        <!-- 弹窗主布局背景样式 -->
        <attr name="lib_dialog_bg" format="color|reference" />
        <attr name="lib_dialog_bg_width" format="dimension" />
        <!-- 弹窗标题样式 -->
        <attr name="lib_dialog_title_bg" format="color|reference" />
        <attr name="lib_dialog_title_text_color" format="color|reference" />
        <attr name="lib_dialog_title_text_size" format="dimension" />
        <attr name="lib_dialog_top_space_padding" format="dimension" />
        <attr name="lib_dialog_space_between_title_and_content" format="dimension" />
        <!-- 弹窗内容样式 -->
        <attr name="lib_dialog_content_bg" format="color|reference" />
        <attr name="lib_dialog_content_text_color" format="color|reference" />
        <attr name="lib_dialog_content_text_size" format="dimension" />
        <attr name="lib_dialog_content_left_padding" format="dimension" />
        <attr name="lib_dialog_content_right_padding" format="dimension" />
        <attr name="lib_dialog_content_bottom_space_padding" format="dimension" />
        <!-- 弹窗button上方分割线样式 -->
        <attr name="lib_dialog_line_bg" format="color|reference" />
        <attr name="lib_dialog_line_gravity" format="integer" />
        <attr name="lib_dialog_line_height" format="dimension" />
        <attr name="lib_dialog_line_visible" format="integer" />
        <!-- 弹窗Button父布局样式 -->
        <attr name="lib_dialog_button_parent_bg" format="color|reference" />
        <attr name="lib_dialog_button_parent_height" format="dimension" />
        <attr name="lib_dialog_button_parent_orientation" format="integer" />
        <attr name="lib_dialog_button_parent_divider" format="reference" />
        <!-- 弹窗取消Button布局样式 -->
        <attr name="lib_dialog_cancel_button_bg" format="color|reference" />
        <attr name="lib_dialog_single_cancel_button_bg" format="color|reference" />
        <attr name="lib_dialog_cancel_button_text_size" format="dimension" />
        <attr name="lib_dialog_cancel_button_text_color" format="color|reference" />
        <!-- 弹窗确认Button布局样式 -->
        <attr name="lib_dialog_confirm_button_bg" format="color|reference" />
        <attr name="lib_dialog_single_confirm_button_bg" format="color|reference" />
        <attr name="lib_dialog_confirm_button_text_size" format="dimension" />
        <attr name="lib_dialog_confirm_button_text_color" format="color|reference" />
    </declare-styleable>
</resources>