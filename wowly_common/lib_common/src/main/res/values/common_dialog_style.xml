<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="lib_common_tip_dialog_theme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--字体颜色高亮光标颜色-->
        <item name="android:textCursorDrawable">@drawable/common_cursor</item>
        <!-- 弹窗主布局背景样式 -->
        <item name="lib_dialog_bg_width">300dp</item>
        <item name="lib_dialog_bg">@drawable/common_bg_rounded_box</item>
        <!-- 弹窗标题样式 -->
        <item name="lib_dialog_title_bg">@android:color/transparent</item>
        <item name="lib_dialog_title_text_color">#212121</item>
        <item name="lib_dialog_title_text_size">18dp</item>
        <item name="lib_dialog_top_space_padding">22dp</item>
        <item name="lib_dialog_space_between_title_and_content">19dp</item>
        <!-- 弹窗内容样式 -->
        <item name="lib_dialog_content_bg">@android:color/transparent</item>
        <item name="lib_dialog_content_text_color">#212121</item>
        <item name="lib_dialog_content_text_size">14dp</item>
        <item name="lib_dialog_content_left_padding">15dp</item>
        <item name="lib_dialog_content_right_padding">15dp</item>
        <item name="lib_dialog_content_bottom_space_padding">20dp</item>
        <!-- 弹窗button上方分割线样式 -->
        <item name="lib_dialog_line_bg">#F1F1F1</item>
        <item name="lib_dialog_line_height">0.5dp</item>
        <!-- 弹窗Button父布局样式 -->
        <item name="lib_dialog_button_parent_bg">@android:color/transparent</item>
        <item name="lib_dialog_button_parent_height">55dp</item>
        <item name="lib_dialog_button_parent_divider">@drawable/common_horizontal_divider_line</item>
        <!-- 弹窗取消Button布局样式 -->
        <item name="lib_dialog_cancel_button_bg">@drawable/common_bg_bottom_left_rounded_box_selector</item>
        <!--<item name="lib_dialog_single_cancel_button_bg">@drawable/lib_bg_bottom_rounded_box_selector</item>-->
        <item name="lib_dialog_cancel_button_text_size">19dp</item>
        <item name="lib_dialog_cancel_button_text_color">#212121</item>
        <!-- 弹窗确认Button布局样式 -->
        <item name="lib_dialog_confirm_button_bg">@drawable/common_bg_bottom_right_rounded_box_selector</item>
        <!--<item name="lib_dialog_single_confirm_button_bg">@drawable/lib_bg_bottom_rounded_box_selector</item>-->
        <item name="lib_dialog_confirm_button_text_size">19dp</item>
        <item name="lib_dialog_confirm_button_text_color">#333333</item>
    </style>
</resources>