<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 应用全局主题设置 -->
    <style name="Theme.CommonTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Appbar标题栏主背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Appbar标题栏第二背景色-->
        <item name="colorSecondary">@color/colorPrimary</item>
        <!--Appbar标题栏主背景可选色-->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <!--Appbar标题栏主第二背景可选色-->
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <!--顶部状态栏和底部导航栏默认颜色-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--Actionbar背景文字颜色-->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!--Actionbar文字第二背景颜色-->
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <!-- 状态条颜色-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/common_white</item>
        <!--ToolBar上的Title颜色-->
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <!--去掉ActionBar-->
        <item name="windowActionBar">false</item>
        <!--去掉标题栏-->
        <item name="windowNoTitle">true</item>
        <!-- 图标和控制项的正常状态颜色 -->
        <item name="colorControlNormal">@color/common_text_gray_4</item>
        <!-- 图标和控制项的选中激活状态颜色 -->
        <item name="colorControlActivated">@color/common_text_blue</item>
        <!-- 图标和控制项的点击高亮颜色 -->
        <item name="colorControlHighlight">@color/common_text_blue</item>
        <!--字体颜色高亮光标颜色-->
        <item name="android:textCursorDrawable">@drawable/common_cursor</item>
        <!--按钮默认状态颜色-->
        <item name="colorButtonNormal">@color/common_fill_blue_2</item>
        <!--展示错误的提示颜色-->
        <item name="colorError">@color/common_fill_blue_1</item>
    </style>
</resources>