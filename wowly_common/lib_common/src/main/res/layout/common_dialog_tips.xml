<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:tools="http://schemas.android.com/tools"
             android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="?attr/lib_dialog_bg_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="?attr/lib_dialog_top_space_padding"
        android:background="?attr/lib_dialog_bg">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/lib_dialog_space_between_title_and_content"
            android:background="?attr/lib_dialog_title_bg"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="?attr/lib_dialog_title_text_size"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/lib_dialog_title_text_color"
            tools:text="标题"/>

        <ScrollView
            android:id="@+id/svMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/lib_dialog_content_bottom_space_padding"
            android:visibility="gone"
            android:layout_marginLeft="?attr/lib_dialog_content_left_padding"
            android:layout_marginRight="?attr/lib_dialog_content_right_padding">

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/lib_dialog_content_bg"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5dip"
                android:textSize="?attr/lib_dialog_content_text_size"
                android:textColor="?attr/lib_dialog_content_text_color"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="内容"/>
        </ScrollView>

        <LinearLayout
            android:id="@+id/center_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"/>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="?attr/lib_dialog_line_height"
            android:background="?attr/lib_dialog_line_bg"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/dialog_lly"
            android:layout_width="match_parent"
            android:layout_height="?attr/lib_dialog_button_parent_height"
            android:layout_gravity="bottom"
            android:background="?attr/lib_dialog_button_parent_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:divider="?attr/lib_dialog_button_parent_divider"
            android:showDividers="middle"
            android:weightSum="2"
            android:visibility="gone">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/lib_dialog_cancel_button_bg"
                android:gravity="center"
                android:textSize="?attr/lib_dialog_cancel_button_text_size"
                android:textColor="?attr/lib_dialog_cancel_button_text_color"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="取消"/>

            <TextView
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/lib_dialog_confirm_button_bg"
                android:gravity="center"
                android:textSize="?attr/lib_dialog_confirm_button_text_size"
                android:textColor="?attr/lib_dialog_confirm_button_text_color"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="确定"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>