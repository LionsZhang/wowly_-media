<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/loading_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/common_bg_dialog_loading"
    android:padding="10dip">

    <ImageView
        android:id="@+id/loading_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:background="@mipmap/common_dialog_loading_logo"/>

    <ImageView
        android:id="@+id/loading_quan_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/common_dialog_loading_quan"/>
</RelativeLayout>